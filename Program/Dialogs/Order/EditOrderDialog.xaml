<Window x:Class="Program.Dialogs.Order.EditOrderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Program.Dialogs.Order"
        mc:Ignorable="d"
        Title="Bestellung ändern" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Grid.Row="1">
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <Label Content="Bestelldatum"></Label>
                <DatePicker Name="orderDatePicker"></DatePicker>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <Label Content="Lieferdatum"></Label>
                <DatePicker Name="deliverDatePicker"></DatePicker>
            </StackPanel>

            <Button Content="Bestellung ändern" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
